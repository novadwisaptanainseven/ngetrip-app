<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- splash1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/splash"
        android:orientation="vertical"
        android:elevation="10dp">
        <!--Card-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_layout_white_round"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_wisata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/labuan" />

        </LinearLayout>
        <!--menu-->
        <LinearLayout
            android:paddingHorizontal="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_paket_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Labuan Cermin-Kaniungan"
                android:textSize="17sp"
                android:textColor="#666"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/nama_agent_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Derawan Happy Fun Trip"
                android:textColor="#52057B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Rp. 650.000 / org"
                android:textSize="12sp"
                android:textColor="#888"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_btn_lavender"
                android:text="Lihat"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>